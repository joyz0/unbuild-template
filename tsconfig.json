{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "playground/*": ["./playground/*"]
    }
  },
  "include": ["src", "test", "playground"]
}
